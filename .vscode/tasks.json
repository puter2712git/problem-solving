{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "cppbuild",
      "command": "g++",
      "args": [
        "-g",
        "-Wall",
        "-Wextra",
        "-Werror",
        "-pedantic",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe",
        "${file}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}